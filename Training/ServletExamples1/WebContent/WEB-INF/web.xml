	<servlet>  
		<servlet-name>s1</servlet-name>  
		<servlet-class>com.java.filter.FilterServlet</servlet-class>  
	</servlet>  
  
	<servlet-mapping>  
		<servlet-name>s1</servlet-name>  
		<url-pattern>/servlet1</url-pattern>  
	</servlet-mapping>  
  
	<filter>  
		<filter-name>f1</filter-name>  
		<filter-class>com.java.filter.MyFilter</filter-class>  
	</filter>  
   
	<filter-mapping>  
		<filter-name>f1</filter-name>  
		<url-pattern>/servlet1</url-pattern>  
	</filter-mapping>  
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>