<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
<package name="default" extends="struts-default">
<interceptors>  
	<interceptor name="upper" class="com.struts.interceptor.MyInterceptor"></interceptor>  
</interceptors>  

<action name="UpperCase" class="com.struts.interceptor.UpperCase">  
 <interceptor-ref name="defaultStack"></interceptor-ref>  
	<interceptor-ref name="upper"></interceptor-ref>   
	<result>upperCase.jsp</result>  
</action>  

<action name="product" class="com.java.struts.Product">
	<result name="success">welcome.jsp</result>
</action>

<action name="login" class="com.struts.interceptor.Login" method="execute">
	<interceptor-ref name="params"></interceptor-ref>
	<interceptor-ref name="execAndWait"></interceptor-ref>
	<result name="success">/login-success.jsp</result>
	<result name="error">/login-error.jsp</result>
	<result name="wait">/myintermediatepage.jsp</result>
</action>

</package>
</struts>    
